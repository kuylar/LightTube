@model AccountContext

@{
	Layout = "_AccountLayout";
	Model.HtmlTitle = Model.Localization.GetRawString("titles.account.delete");
}

<div class="signin-input-container">
	<input class="text" name="userid" placeholder="@Model.Localization.GetString("account.userid")">
</div>

<div class="signin-input-container">
	<input class="text" name="password" id="password" type="password" placeholder="@Model.Localization.GetString("account.password")">
</div>

<div class="signin-input-container">
	<input class="text" name="passwordCheck" type="password" placeholder="@Model.Localization.GetString("account.confirmpassword")">
</div>

<div class="signin-checkbox" style="display:none;">
	<input id="showpass" type="checkbox">
	<label for="showpass">@Model.Localization.GetString("account.showpassword")</label>
</div>
<br>

<div class="signin-checkbox">
	<input id="consent" name="consent" type="checkbox">
	<label for="consent">@Model.Localization.FormatString("account.deleteconfirm", Context.Request.Host)</label>
</div>

<div class="signin-buttons">
	<span></span>
	<input type="submit" class="signin-button-danger" value="@Model.Localization.GetString("account.delete")">
</div>