@using LightTube.Database.Models
@model SubscriptionContext

@{
	Layout = "_ModalLayout";
}

<img loading="lazy"
	 class="avatar"
     src="@Model.Channel.Header?.Avatars.Last().Url"
     alt="@Model.Channel.Header?.Title">
<h2 class="title ml-1">
	@Model.Channel.Header?.Title
</h2>
<p>
	@Model.Localization.GetString("subscription.edit.body")
</p>

<div>
	<input type="radio" id="st_0" name="type" value="0" @(Model.CurrentType == SubscriptionType.NONE ? "checked" : "")>
	<label for="st_0">
		@Model.Localization.GetString("subscription.state.0")
	</label><br>
	<input type="radio" id="st_2" name="type" value="2" @(Model.CurrentType == SubscriptionType.NOTIFICATIONS_ON ? "checked" : "")>
	<label for="st_2">
		@Model.Localization.GetString("subscription.state.2.detailed")
	</label><br>
	<input type="radio" id="st_1" name="type" value="1" @(Model.CurrentType == SubscriptionType.NOTIFICATIONS_OFF ? "checked" : "")>
	<label for="st_1">
		@Model.Localization.GetString("subscription.state.1.detailed")
	</label>
</div>
