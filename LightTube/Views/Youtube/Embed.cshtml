@model EmbedContext

@{
	Layout = null;
	Model.Title = Model.Player.Title;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8"/>
	<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
	<meta property="theme-color" content="#AA0000"/>
	<meta property="author" content="@Model.Video.Channel.Title"/>
	<meta property="og:site_name" content="lighttube"/>
	<meta property="og:type" content="website"/>
	<meta property="og:title" content="@Model.Video.Title"/>
	<meta property="og:url" content="@($"{Url.ActionContext.HttpContext.Request.Scheme}://{Url.ActionContext.HttpContext.Request.Host}{Url.ActionContext.HttpContext.Request.Path}{Url.ActionContext.HttpContext.Request.QueryString}")"/>
	<meta property="og:image" content="@($"{Url.ActionContext.HttpContext.Request.Scheme}://{Url.ActionContext.HttpContext.Request.Host}/proxy/thumbnail/{Model.Video.Id}/0")"/>
	<meta property="og:description" content="@Model.Video.Description"/>
	<meta property="twitter:card" content="@($"{Url.ActionContext.HttpContext.Request.Scheme}://{Url.ActionContext.HttpContext.Request.Host}/proxy/thumbnail/{Model.Video.Id}/-1")"/>
	<link rel="stylesheet" href="~/lib/videojs/video-js.min.css">
	<link rel="stylesheet" href="~/lib/videojs-endscreen/videojs-endscreen.css">
	<link rel="stylesheet" href="~/lib/videojs-vtt-thumbnails/videojs-vtt-thumbnails.min.css">
	<link rel="stylesheet" href="~/lib/videojs-hls-quality-selector/videojs-hls-quality-selector.css">
	<link rel="stylesheet" href="~/lib/silvermine-videojs-quality-selector/silvermine-videojs-quality-selector.css">
	<link rel="stylesheet" href="~/css/vjs-skin.css">
	<title>@Model.Player.Player.Details.Title - LightTube</title>
	<style>
		video, .video-js {
			position: absolute;
			top:  0;
			bottom: 0;
			left: 0;
			right: 0;
			width: 100%;
			height: 100%;
		}
	</style>
</head>
<body>
@await Html.PartialAsync("Player", Model.Player)
<script src="/lib/videojs/video.min.js"></script>
<script src="/lib/videojs-hotkeys/videojs.hotkeys.min.js"></script>
<script src="/lib/videojs-endscreen/videojs-endscreen.js"></script>
<script src="/lib/videojs-vtt-thumbnails/videojs-vtt-thumbnails.min.js"></script>
<script src="/lib/videojs-contrib-quality-levels/videojs-contrib-quality-levels.min.js"></script>
<script src="/lib/videojs-hls-quality-selector/videojs-hls-quality-selector.min.js"></script>
<script src="/lib/silvermine-videojs-quality-selector/silvermine-videojs-quality-selector.min.js"></script>
<script src="/js/player.js"></script>
</body>
</html>